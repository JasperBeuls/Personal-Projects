<Window x:Class="BoekenAuteursEF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoekenAuteursEF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="gebruikernaamTextBox" HorizontalAlignment="Left" Height="23" Margin="128,66,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="paswoordPasswordBox" HorizontalAlignment="Left" Margin="128,110,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="31,66,0,0" TextWrapping="Wrap" Text="Gebruikernaam" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="31,110,0,0" TextWrapping="Wrap" Text="Paswoord" VerticalAlignment="Top"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="113,161,0,0" VerticalAlignment="Top" Width="75" Click="loginButton_Click"/>

    </Grid>
</Window>
